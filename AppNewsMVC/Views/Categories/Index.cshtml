@model IEnumerable<LibraryNews.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>
<hr />
<p>
    <a class="btn btn-outline-primary btn-sm" asp-action="Create">Create New</a>
</p>
<form asp-controller="Categories" asp-action="Index">
    <p>
        <input type="text" class="txt text-sm-left" name="SearchString" placeholder="Category.." />
        <button type="submit" class="btn btn-outline-primary btn-sm">Search</button>
    </p>
</form>
<div class="table-responsive-sm">

    <table class="table-lg table table-bordered border-dark">
        <thead class="table-hover table-primary">
            <tr  align="right">
                
                    @*<th>
                        Category Id
                    </th>*@
                
                <th>
                    Category
                </th>
               <th align="right">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr align="right">

               @* <td>
                  @HTML.DISPLAYFOR(MODELITEM => ITEM.IDCATEGORY)
                </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.Namecategory)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm w-30" asp-action="Edit" asp-route-id="@item.IdCategory">Edit</a> |
                    <a class="btn btn-info btn-sm w-30" asp-action="Details" asp-route-id="@item.IdCategory">Details</a> |
                    <a class="btn btn-danger btn-sm w-30" asp-action="Delete" asp-route-id="@item.IdCategory">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

